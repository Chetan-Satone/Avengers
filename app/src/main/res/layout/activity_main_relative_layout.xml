<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/txtLayoutSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android is fun"
        android:textColor="@color/purple_700"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:padding="8dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/txtLayoutHeader"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/tony_stark_new" />
    <Button
        android:id="@+id/btnClickHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="click here"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_below="@id/etName"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name here"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:layout_below="@id/txtLayoutSubheader"
        android:inputType="textPassword"/>

</RelativeLayout>